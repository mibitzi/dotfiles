Config { font = "-misc-fixed-*-*-*-*-10-*-*-*-*-*-*-*"
        , bgColor = "black"
        , fgColor = "grey"
        , position = TopW L 97
        , commands = [ Run StdinReader
        , Run Weather "LSZH" ["-t","<station>: <tempC>C","-L","18","-H","25","--normal","green","--high","red","--low","lightblue"] 36000
        , Run Memory ["-t","Mem: <usedratio>%"] 10
        , Run Com "uname" ["-s","-r"] "" 36000
        , Run Com "sh" ["-c", "cat /proc/loadavg | awk '{print $1,$2,$3}'"] "loadavg" 10
        , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
        , Run DiskU [("/", "/ <freep>%"), ("/home", "/home <freep>%")] [] 20
        ]
        , sepChar = "%"
        , alignSep = "}{"
        , template = "%StdinReader% }{ %uname% | Load: %loadavg% | %memory% | %disku% | %LSZH% | <fc=#ffaf00>%date%</fc>   "
}
